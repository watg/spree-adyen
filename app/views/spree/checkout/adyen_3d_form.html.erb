<div id="checkout">
  <div class="row">
    <h1 class="columns three alpha"><%= Spree.t(:checkout) %></h1>
    <div class="columns thirteen omega"><%= checkout_progress %></div>
  </div>

  <div class="row">
    <div class="columns alpha twelve">
      <form method="POST" action="<%= @adyen_3d_response.issuer_url %>" id="3dform">
        <input type="hidden" name="PaReq" value="<%= @adyen_3d_response.pa_request %>" />
        <input type="hidden" name="TermUrl" value="<%= adyen_authorise3d_url %>" />
        <input type="hidden" name="MD" value="<%= @adyen_3d_response.md %>" />

        <br/>
        <br/>
        <div style="text-align: center">
          <h1>Processing your 3-D Secure Transaction </h1>
          <p>Please click continue to continue the processing of your 3-D Secure transaction.</p>
          <input type="submit" class="button" value="continue"/>
        </div>
      </form>
    </div>

    <div id="checkout-summary" data-hook="checkout_summary_box" class="columns omega four">
      <%= render :partial => 'summary', :locals => { :order => @order } %>
    </div>
  </div>
</div>
